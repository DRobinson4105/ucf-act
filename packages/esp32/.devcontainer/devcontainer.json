{
    "name": "ESP32 ESP-IDF Dev",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "DOCKER_TAG": "v5.5"
        }
    },
    "runArgs": ["--privileged"],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "idf.espIdfPath": "/opt/esp/idf",
                "idf.toolsPath": "/opt/esp",
                "idf.gitPath": "/usr/bin/git"
            },
            "extensions": [
                "espressif.esp-idf-extension",
                "espressif.esp-idf-web",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools"
            ]
        }
    },
    "workspaceFolder": "/workspaces/esp32",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspaces/esp32,type=bind"
    ]
}
